@model IEnumerable<Biblioteca.Models.Prestamo>;

@{
    Layout = null;
    var index = 1;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="~/css/printer.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body onload="window.print()" onafterprint="history.back()">
    <div class="row">
                <h4>SOLICITUDES de PRESTAMO (RESERVADOS)</h4>
            </div>
            <div class="row">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>NÂ°</th>
                            <th>Libro</th>
                            <th>Lector</th>
                            <th>Fecha</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var prestamo in Model){
                            <tr>
                                <td>@index</td>
                                <td>@prestamo.Libro!.Titulo</td>
                                <td>@prestamo!.Persona!.NombreCompleto</td>
                                <td>@prestamo.Fechaprestamo</td>
                            </tr>
                            index++;
                        }
                    </tbody>
                </table>
            </div>
</body>
</html>