@model Biblioteca.Models.Libro

@{
    ViewData["Title"] = "Edit";
}
<h1>Editar libro</h1>

<div class="row justify-content-center">
    <div class="col col-8">

        <form asp-action="Create" enctype="multipart/form-data">
            <div class="row">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Titulo" class="control-label"></label>
                        <input asp-for="Titulo" class="form-control" />
                        <span asp-validation-for="Titulo" class="text-danger"></span>
                    </div>
                    <div class="col-4">
                        <div class="form-group">
                            <label asp-for="Autor" class="control-label"></label>
                            <select asp-for="AutorId" class="form-control" asp-items="ViewBag.Autores">
                                <option value=""> Seleccione Autor</option>  
                            </select>
                            <span asp-validation-for="AutorId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="form-group">
                            <label asp-for="Categoria" class="control-label"></label>
                            <select asp-for="CategoriaId" class="form-control" asp-items="ViewBag.Categorias">
                                <option value=""> Seleccione Categoria</option>
                            </select>
                            <span asp-validation-for="CategoriaId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="form-group">
                            <label asp-for="Editorial" class="control-label"></label>
                            <select asp-for="EditorialId" class=" form-control" asp-items="ViewBag.Editoriales">
                                <option value="">Seleccione Editorial</option>
                            </select>
                            <span asp-validation-for="EditorialId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="form-group">
                            <label asp-for="ISBN" class="control-label"></label>
                            <input asp-for="ISBN" class="form-control" />
                            <span asp-validation-for="ISBN" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="form-group">
                            <label asp-for="Ubicacion" class="control-label"></label>
                            <input asp-for="Ubicacion" class="form-control" />
                            <span asp-validation-for="Ubicacion" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="form-group">
                            <label asp-for="Ejemplares" class="control-label"></label>
                            <input asp-for="Ejemplares" class="form-control" />
                            <span asp-validation-for="Ejemplares" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-6">    
                        <div class="form-group">
                            <label asp-for="Fechareg" class="control-label"></label>
                            <input asp-for="Fechareg" class="form-control" />
                            <span asp-validation-for="Fechareg" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <label asp-for="Estado" class="control-label"></label>
                            <input asp-for="Estado" class="form-control" />
                            <span asp-validation-for="Estado" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="FotoFile" class="control-label"></label>
                        <input asp-for="FotoFile" class="form-control" />
                        <span asp-validation-for="FotoFile" class="text-danger"></span>
                    </div>

                    <div class="form-group d-flex justify-content-end">
                        <a class="btn btn-secondary" asp-action="Index">Regresar</a>
                        <input type="submit" value="Actualizar libro" class="btn btn-primary" />
                    </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

