@model Biblioteca.Dto.ReporteLibros;

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Sindicato Mejillones - Lista de pagos</title>
    <link href="~/css/printer.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body onload="window.print()" onafterprint="history.back()">
    <div class="row mx-2 d-flex justify-content-center">
        <br>
        <main>
            <div class="row">
                <h4>Libros mas solicitados</h4>
            </div>
            <div class="row">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>TÃ­tulo</th>
                            <th>Cantidad de Solicitudes</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Libros != null && Model.Libros.Any())
                        {
                            foreach (var libro in Model.Libros)
                            {
                                <tr>
                                    <td>@libro.Titulo</td>
                                    <td>@libro.Cantidad</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="2" class="text-center">No hay datos disponibles.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </main>
    </div>
</body>
</html>