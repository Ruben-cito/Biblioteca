@model Biblioteca.Models.Persona
@using Biblioteca.Dto
@{
    ViewData["Title"] = "Edit";
}

<h1>Actualizar datos Usuario</h1>
<hr />
<form asp-action="Edit">
    <div class="row">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
        <div class="col col-4">
            <div class="form-group">
                <label asp-for="Nombre" class="control-label">Nombres</label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
        </div>
        <div class="col col-3">
            <div class="form-group">
                <label asp-for="Paterno" class="control-label">Apellido paterno</label>
                <input asp-for="Paterno" class="form-control" />
                <span asp-validation-for="Paterno" class="text-danger"></span>
            </div>
        </div>
        <div class="col col-3">
            <div class="form-group">
                <label asp-for="Materno" class="control-label">Apellido materno</label>
                <input asp-for="Materno" class="form-control" />
                <span asp-validation-for="Materno" class="text-danger"></span>
            </div>
        </div>
        <div class="col col-2">
            <div class="form-group">
                <label asp-for="Codigo" class="control-label">CI</label>
                <input asp-for="Codigo" class="form-control" />
                <span asp-validation-for="Codigo" class="text-danger"></span>
            </div>
        </div>
        <div class="col col-3">
            <div class="form-group">
                <label asp-for="Correo" class="control-label">Correo electronico</label>
                <input asp-for="Correo" class="form-control" />
                <span asp-validation-for="Correo" class="text-danger"></span>
            </div>
        </div>
        <div class="col col-3">
            <div class="form-group">
                <label asp-for="Password" class="control-label">Contraseña</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>
        <div class="col col-3">
            <div class="form-group">
                <label asp-for="Cargo" class="control-label"></label>
               @*  <select asp-for="Cargo" class="form-control"></select> *@
                <select asp-for="Cargo" class="form-control" asp-items="Html.GetEnumSelectList<CargoEnum>()">

                    <option value=""> Seleccione cargo </option>
                </select>

                <span asp-validation-for="Cargo" class="text-danger"></span>
            </div>
        </div>
        <div class="col col-3">
            <div class="form-group">
                <label asp-for="Estado" class="control-label">Estado</label>
                <input asp-for="Estado" class="form-control" placeholder="ACTIVO/BLOQUEADO"/>
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>
        </div>
        <input type="hidden" value="1" asp-for="Intentos" class="form-control" />
            
    </div>
    <div class="row p-2">
        <div class="form-group">
            <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
            <input type="submit" value="Guardar cambios" class="btn btn-primary" />
        </div>
    </div>
</form>

<div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
