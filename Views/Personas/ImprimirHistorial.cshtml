@model Biblioteca.Dto.HistorialLector;

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Sindicato Mejillones - Lista de pagos</title>
    <link href="~/css/printer.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body onload="window.print()" onafterprint="history.back()">
    <div class="row mx-2 d-flex justify-content-center">
        <header>
            <div class="row d-flex justify-content-center">
                <h2>Lector: <strong>@Model.Persona!.NombreCompleto</strong></h2>
            </div>
        </header>
        <br>
        <main>
            <div class="row">
                <h4>Prestamos</h4>
            </div>
            <div class="row">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>N°</th>
                            <th>Libro</th>
                            <th>Fecha de prestamo</th>
                            <th>Estado</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var prestamo in Model.Prestamos!){
                            var index = 1;
                            <tr>
                                <td>@index</td>
                                <td>@prestamo!.Libro!.Titulo</td>
                                <td>@(prestamo.Estado == "RESERVADO" ? prestamo.Fechaprestamo : prestamo.FechaConfirmacion)</td>
                                <td>@prestamo!.Estado</td>
                            </tr>
                            index++;
                        }
                    </tbody>
                </table>
            </div>
            <div class="row">
                <h4>Sanciones</h4>
            </div>
            <div class="row">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>N°</th>
                            <th>Motivo</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var sancion in Model.Sanciones!){
                            var index = 1;
                            <tr>
                                <td>@index</td>
                                <td>@sancion.Motivo</td>
                                <td>@sancion.Montototal Bs.</td>
                            </tr>
                            index++;
                        }
                    </tbody>
                </table>
            </div>
        </main>
    </div>
</body>
</html>