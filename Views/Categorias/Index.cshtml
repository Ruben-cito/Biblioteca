@model IEnumerable<Biblioteca.Models.Dato>

@{
    ViewData["Title"] = "Index";
    var index = 1;
}

<h1>Categorias</h1>

<p>
    <a class="btn btn-success" asp-action="Create">Crear Nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>N°</th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>Opciones</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@index</td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil"></i></a>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash3"></i></a>
            </td>
        </tr>
        index++;
}
    </tbody>
</table>